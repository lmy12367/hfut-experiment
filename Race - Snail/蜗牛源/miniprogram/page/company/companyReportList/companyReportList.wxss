/* miniprogram/page/company/companyReportList/companyReportList.wxss */
.title {
  position: fixed;
  background-color: #3a78e7;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  width: 750rpx;
  top: 0;
  z-index: 9999;
  color: #fff;
}

.title-content {
  margin: auto;
  font-size: 35rpx;
  letter-spacing: 3rpx;
}

.sup-view {
  width: 100%;
  height: 80rpx;
}

.top-selected {
  width: 650rpx;
  margin: 0 0 0 50rpx;
  position: relative;
  line-height: 80rpx;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
  font-size: 30rpx;
  text-align: center;
  padding: 0 20rpx;
  border-bottom-style: solid;
  border-bottom-width: 3rpx;
  border-bottom-color: rgb(240, 240, 240);
}

.sup-select {
  display: flex;
  justify-content: space-between;
  color: #7b7b7b;
}

/* 下拉内容 */

.select-box {
  position: fixed;
  top: 150rpx;
  right: 80rpx;
  background-color: #fff;
  /* padding: 0 20rpx; */
  width: 200rpx;
  right: 0;
  z-index: 1;
  overflow: hidden;
  text-align: right;
  animation: myfirst 0.5s;
  font-size: 25rpx;
  float: right;
  z-index: 9999;
}

.select_one {
  width: 200rpx;
  height: 80rpx;
  position: relative;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
}

/* 下拉过度效果 */

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}

.dividing {
  margin-top: 30rpx;
  width: 100%;
  height: 10rpx;
  background-color: rgb(240, 240, 240);
}

.top-info {
  display: flex;
  padding-top: 20rpx;
}

.head-img {
  width: 110rpx;
  height: 110rpx;
  background-color: rgb(84, 77, 145);
  border-radius: 110rpx;
  margin: 0 30rpx 0 40rpx;
}

.per-info-box {
  width: 230rpx;
  margin: 0 60rpx 0 0;
}

.per-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.per-name {
  font-weight: bold;
}

.per-work {
  font-size: 25rpx;
  line-height: 45rpx;
}

.per-education {
  font-size: 30rpx;
}

.dou-func {
  height: 110rpx;
  line-height: 110rpx;
}

.dou-func > text {
  font-size: 25rpx;
  margin-left: 35rpx;
  color: #fa8906;
  letter-spacing: 6rpx;
}

.center-intro {
  margin-left: 40rpx;
  font-size: 27rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.detail-intro {
  height: 400rpx;
  width: 650rpx;
  margin: 0 auto;
  padding: 10rpx 25rpx;
  font-size: 27rpx;
  line-height: 45rpx;
  letter-spacing: 4rpx;
  background-color: #eeeeee;
  white-space: pre-wrap;
}

.boss-reply {
  height: 180rpx;
  width: 650rpx;
  margin: 50rpx auto 20rpx;
  padding: 10rpx 25rpx;
  background-color: #eeeeee;
}

.boss-reply-title {
  color: #ff8a05;
  margin-bottom: 10rpx;
}

.boss-reply-content {
  margin-left: 10rpx;
  font-size: 28rpx;
  white-space: pre-wrap;
}

.qualified {
  width: 750rpx;
  height: 100rpx;
  background-color: #3a78e7;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-evenly;
}

.boundary {
  margin-top: 16rpx;
  height: 70rpx;
  border-right-style: solid;
  border-width: 2rpx;
  border-color: #3f3d3d;
}

.is-pass {
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #3a78e7;
  color: #fff;
  text-align: center;
}

.bottom-sup {
  height: 100rpx;
  width: 750rpx;
}