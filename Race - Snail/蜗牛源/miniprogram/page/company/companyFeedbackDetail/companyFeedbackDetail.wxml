<!--miniprogram/page/company/companyFeedbackDetail/companyFeedbackDetail.wxml-->
<!-- 标题 -->
<view class="title">
  <view class="go-back" catchtap="goBack"><text class="iconfont icon-biaoqing" id="go-back"></text></view>
  <text class="title-content">反馈详情</text>
</view>

<!-- 顶下去 -->
<view class="sup-view"></view>

<!-- 图案，是否被录取 -->
<view class="feedback-img"  wx:if="{{is_pass}}">
  <text class="iconfont icon-chenggong1" id="pass-icon"></text>
</view>

<view class="feedback-img"  wx:if="{{!is_pass}}">
  <text class="iconfont icon-jinzhi" id="nopass-icon"></text>
</view>

<!-- 主体内容 -->
<view class="notice-content">
  <view class="notice-title">
    <view class="feedback-result" wx:if="{{is_pass}}">{{seccess_info.title}}</view>
    <view class="feedback-result" wx:if="{{!is_pass}}">{{falied_info.title}}</view>
    <view class="recieve-time">{{recieve_time}}</view>
  </view>
  <view class="company-identity">{{company_identity}}</view>
  <view class="company-name">
    <view>{{company_name}}</view>
    <view>
      <text class="iconfont icon-arrow-right"></text>
    </view>
  </view>
  <view class="apply-time">申请时间：{{apply_time}}</view>

  <!-- 分割线 -->
  <view class="dividing "></view>

  <view wx:if="{{is_pass}}">
    <view class="interview-time">面试时间：{{interview_time}}</view>
    <view class="interview-local">面试地点:{{interview_local}}</view>
    <view class="interview-person">联系人: {{interview_people}}（{{phone}}）</view>
  </view>
  <view wx:if="{{!is_pass}}" class="failed-info">
    <text class="failed-name">{{company_name}}</text>认为你的简历与职位有些不匹配，很抱歉地通知您无法进入面试。
  </view>

  <!-- 分割线 -->
  <view class="dividing "></view>

  <view class="remind-title">温馨提示:</view>
  <view class="remind-content" wx:if="{{is_pass}}">{{success_info.content}}<text class="interview-helper">阅读指南</text></view>
  <view class="remind-content" wx:if="{{!is_pass}}">{{falied_info.content}}</view>
</view>

<!-- 底下的按钮 -->

<view class="bottom-func" wx:if="{{is_pass}}">
  {{success_info.button_content}}
</view>
<view class="bottom-func" wx:if="{{!is_pass}}">
  {{falied_info.button_content}}
</view>
