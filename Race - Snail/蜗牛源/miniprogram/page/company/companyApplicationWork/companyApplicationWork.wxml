<!--miniprogram/page/company/companyApplicationWork/companyApplicationWork.wxml-->
<!-- 标题 -->
<view class="title">
  <view class="go-back" catchtap="goBack"><text class="iconfont icon-biaoqing" id="go-back"></text></view>
  <text class="title-content">申请的职位</text>
</view>

<!-- 顶下去 -->
<view class="sup-view"></view>

 <!-- 下面的一些文章 -->
 <view class='ticket-container'>
    <scroll-view scroll-y bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}"
      scroll-top="{{scrollTop}}">
      <!--Tab布局-->
      <view class='title'>
        <view class="{{0 == currentIndex ? 'title-sel-selected' : 'title-sel'}}" bindtap='titleClick' data-idx='0'>
          <text>全部</text>
          <hr class="line-style"/>
        </view>
        
        <view class="{{1 == currentIndex ? 'title-sel-selected' : 'title-sel'}}" bindtap='titleClick' data-idx='1'>
          <text>通知面试</text>
          <hr class="line-style"/>
        </view>
        <view class="{{2 == currentIndex ? 'title-sel-selected' : 'title-sel'}}" bindtap='titleClick' data-idx='2'>
          <text>不合适</text>
          <hr class="line-style" />
        </view>
      </view>
 
      <!--内容布局-->
      <swiper class='swiper' bindchange='pagechange' current='{{currentIndex}}'>
        <swiper-item class='swiper'>
          <view wx:for="{{firstList}}" wx:for-item="item" wx:key="firstList" class='record-item'>
            <view class="notice-title">
              <view class="notice-content">
                {{item.title}}
              </view>
              <view class="notice-time">
                {{item.time}}
              </view>
            </view>
            <view class="company-identity">
              {{item.identity}}
            </view>
            <view class="company-name">
              {{item.name}}
            </view>
            <view class="bottom-info">
              <view class="notice-time">
                {{item.time}}
              </view>
              <view class="company-local">
                {{item.local}}
              </view>
            </view>
          </view>
        </swiper-item>
        <swiper-item class='swiper' class='swiper'>
          <view wx:for="{{secondList}}" wx:for-item="item" wx:key="secondList" class='record-item'>
            <view class="notice-title">
              <view class="notice-content">
                {{item.title}}
              </view>
              <view class="notice-time">
                {{item.time}}
              </view>
            </view>
            <view class="company-identity">
              {{item.identity}}
            </view>
            <view class="company-name">
              {{item.name}}
            </view>
            <view class="bottom-info">
              <view class="notice-time">
                {{item.time}}
              </view>
              <view class="company-local">
                {{item.local}}
              </view>
            </view>
          </view>
        </swiper-item>
        <swiper-item class='swiper' class='swiper'>
          <view wx:for="{{thirdList}}" wx:for-item="item" wx:key="thirdList" class='record-item'>
            <view class="notice-title">
              <view class="notice-content">
                {{item.title}}
              </view>
              <view class="notice-time">
                {{item.time}}
              </view>
            </view>
            <view class="company-identity">
              {{item.identity}}
            </view>
            <view class="company-name">
              {{item.name}}
            </view>
            <view class="bottom-info">
              <view class="notice-time">
                {{item.time}}
              </view>
              <view class="company-local">
                {{item.local}}
              </view>
            </view>
          </view>
        </swiper-item>
      </swiper>
    </scroll-view>
</view>
