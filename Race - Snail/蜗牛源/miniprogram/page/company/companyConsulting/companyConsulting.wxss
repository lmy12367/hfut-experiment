/* miniprogram/page/company/companyConsulting/companyConsulting.wxss */
.title {
  position: fixed;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  width: 750rpx;
  top: 0;
  z-index: 9999;
}

.title-content {
  margin: auto;
  font-size: 35rpx;
  letter-spacing: 3rpx;
}

#go-back {
  position: fixed;
  top: 0;
  height: 60rpx;
  width: 60rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.sup-view {
  width: 100%;
  height: 80rpx;
}

.basic-info {
  position: relative;
  display: flex;
  width: 100%;
  height: 200rpx;
  padding: 20rpx 10rpx;
  background-color: #3794e7;
  color: #fff;
}

.head-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  background-color: rgb(78, 128, 21);
  margin-top: 10rpx;
}

.comp-info {
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.comp-name {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.describe {
  white-space: pre-wrap;
}

.comp-func {
  position: absolute;
  right: 20rpx;
}

.follow {
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 2rpx solid #fff;
  border-radius: 50rpx;
  text-align: center;
  font-size: 30rpx;
  letter-spacing: 8rpx;
  margin-bottom: 10rpx;
}

.comp-page {
  letter-spacing: 5rpx;
  margin-top: 50rpx;
}

.work-details {
  width: 700rpx;
  margin: 20rpx auto;
}

.all-tags {
  display: flex;
}

.one-tag {
  width: auto;
  height: 50rpx;
  font-size: 30rpx;
  background-color: #fff2e0;
  padding: 5rpx;
  color: #fe7b00;
}

.other-require {
  position: relative;
  display: flex;
  color: #737373;
  letter-spacing: 5rpx;
}

.require-details {
  width: 500rpx;
  font-size: 25rpx;
  line-height: 40rpx;
  white-space: pre-wrap;
}

.learn-more {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 25rpx;
}

.dividing {
  width: 100%;
  height: 20rpx;
  background-color: rgb(240, 240, 240);
}

.words-dividing {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 50rpx;
  font-size: 30rpx;
  color: #656565;
}

.bottom-dividing {
  width: 100%;
  height: 5rpx;
  background-color: rgb(240, 240, 240);
}

checkbox .wx-checkbox-input {
	width: 34rpx;
	height: 34rpx;
	border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #0394F0;
  border-color:#0394F0;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;  
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.one-programme {
  width: 680rpx;
  margin: 20rpx 25rpx;
  border: 2rpx solid #2d93ff;
  padding-left: 20rpx;
  border-radius: 10rpx;
}

.func-details {
  display: flex;
  justify-content: space-between;
  width: 580rpx;
  padding: 20rpx 30rpx 0 20rpx;
}

.func-title {
  font-weight: bold;
}

.func-describe {
  font-size: 30rpx;
  line-height: 55rpx;
  color: #959595;
}

.func-price {
  line-height: 100rpx;
  color: #ff3d00;
}

.senior-dividing {
  text-align: center;
  background-color: #f0f0f0;
  color: #999999;
  height: 80rpx;
  line-height: 80rpx;
}

.bottom-adv {
  display: flex;
  justify-content: space-evenly;
}

.one-adv {
  text-align: center;
}

.adv-top {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #baccda;
  color: #baccda;
  border-radius: 100rpx;
  margin: 20rpx auto 0 auto;
  line-height: 100rpx;
}

.adv-top > text{
  font-size: 60rpx;
}

.adv-center {
  font-weight: bold;
}

.adv-bottom {
  color: #999999;
}

.button-bottom {
  width: 100%;
  height: 100rpx;
  color: #fff;
  background-color: #00a0e9;
  text-align: center;
  line-height: 100rpx;
  font-size: 35rpx;
  letter-spacing: 8rpx;
  position: fixed;
  bottom: 0;
  z-index: 9999;
}

.sup-bottom {
  height: 100rpx;
}