/* miniprogram/page/normal/normalPunblicGoods/normalPublicGoods.wxss */
.search-view {
  background-color: #f1f1f1;
  display: flex;
  height: 80rpx;
  width: 680rpx;
  line-height: 80rpx;
  margin: auto;
  border-radius: 40rpx;
  padding-left: 30rpx;
}

.search-view text {
  font-size: 40rpx;
  color: #c2c2c2;
}

.search-view input {
  margin: auto 0 auto 20rpx;
  font-size: 30rpx;
  width: 600rpx;
}

.input-placeholder {
  letter-spacing: 7rpx;
}
.swiper-class{
  margin-top: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.swiper-class image{
  border-radius: 10rpx;
  height: 100%;
  width: 100%;
}

.adv {
  display: flex;
  justify-content: space-evenly;
  margin-top: 35rpx;
}

.one-adv {
  width: 200rpx;
  height: 120rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
}

.one-adv text {
  font-size: 80rpx;
  display: block;
  text-align: center;
  margin-bottom: 10rpx;
}

.bottom-style image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.dividing {
  width: 100%;
  height: 30rpx;
  background-color: rgb(240, 240, 240);
}

.follow-title {
  margin-top: 10rpx;
  margin-left: 25rpx;
  font-weight: bold;
}

.hot-content {
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx 25rpx 25rpx;
}

.hot-title {
  width: 330rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 25rpx;
  font-style: oblique;
  text-decoration: underline;
}

.hot-activity {
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
}

.hot-activity {
  font-weight: bold;
}

.more-activity{
  font-weight: normal;
  letter-spacing: 7rpx;
  color: #999999;
}

.bottom-style {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 0;
}

.bottom-img {
  width: 330rpx;
  height: 250rpx;
  border-radius: 20rpx;
  background-color: rgb(90, 51, 51);
}

#whole-country {
  color: #f96466;
}

#all-activity {
  color: #febc85;
}

#public-popular {
  color: #48a7fd;
}

.bottom-sup {
  height: 150rpx;
}

#bar-selected {
  color: rgb(172, 235, 235);
  background-color: #fff;
  border: none;
}
.img-des{
  text-align: center;
  
}
.navi-bar {
  padding: 0 80rpx;
  background-color: #fff;
  padding-top: 10rpx;
  border-top-style: solid;
  border-top-color: #999999;
  border-top-width: 2rpx;
  position: fixed;
  width: 590rpx;
  bottom: 0rpx;
  display: flex;
  justify-content: space-between;
  z-index: 9999;
}

.one-bar {
  color: #999999;
  text-align: center;
}

#icon-img {
  font-size: 40rpx;
  margin-right: 20rpx;
}

#is-select {
  color: rgb(92, 158, 233);
}

#icon-bar {
  font-size: 40rpx;
}