/* miniprogram/page/normal/normalMyInfo/normalInfo.wxss */
.title {
  margin: auto;
  margin-bottom: 20rpx;
}

.normal-info {
  position: relative;
  height: 350rpx;
  width: 700rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  background-color: #5887fb;
  display: flex;
  justify-content: space-between;
}

.show-info {
  margin-left: 50rpx;
  margin-top: auto;
  margin-bottom: auto;
  color: white;
}

.person-info {
  display: flex;
  margin-bottom: 30rpx;
}

.head-img {
  width: 130rpx;
  height: 130rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border-radius: 50%;
}

.basic-info {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: column;
}

.name {
  width: 100%;
  font-size: 40rpx;
}

.phone {
  width: 100%;
  font-size: 30rpx;
}

.woniu-info {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: column;
}

.woniu-info {
  height: 100rpx;
  font-size: 25rpx;
}

.woniu-power {
  width: 100%;
}

.woniu-vip {
  width: 100%;
}

.perfect-info {
  background-color: #fcf85b;
  height: 50rpx;
  width: 180rpx;
  line-height: 50rpx;
  text-align: center;
  color: #7eb3d8;
  letter-spacing: 8rpx;
  border-radius: 10rpx 0 0 10rpx;
  font-size: 25rpx;
  margin-top: auto;
  margin-bottom: 80rpx;
}

.dividing {
  width: 100%;
  height: 25rpx;
  background-color: rgb(240, 240, 240);
  margin-top: 50rpx;
}

.other-function{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}

.function-spe {
  display: flex;
  padding-left: 50rpx;
  padding-right: 20rpx;
  justify-content: space-between;
}

.func-name {
  font-size: 30rpx;
}

.func-dividing {
  width: 100%;
  height: 2rpx;
  background-color: rgb(240, 240, 240);
}

#bar-selected {
  color: rgb(172, 235, 235);
  background-color: #fff;
  border: none;
}

.navi-bar {
  padding: 0 80rpx;
  background-color: #fff;
  padding-top: 10rpx;
  border-top-style: solid;
  border-top-color: #999999;
  border-top-width: 2rpx;
  position: fixed;
  width: 590rpx;
  bottom: 0rpx;
  display: flex;
  justify-content: space-between;
  z-index: 9999;
}

.one-bar {
  color: #999999;
  text-align: center;
}

#icon-img {
  font-size: 40rpx;
  margin-right: 20rpx;
}

#is-select {
  color: rgb(92, 158, 233);
}

#icon-bar {
  font-size: 40rpx;
}