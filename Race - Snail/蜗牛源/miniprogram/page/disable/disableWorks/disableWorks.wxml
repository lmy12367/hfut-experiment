<scroll-view class='nav_left' scroll-y='true'>
  <block wx:for="{{cateItems}}" wx:key="{{index}}">
    <view class="nav_left_items {{curNav==item.cate_id?'active':''}}" bindtap="switchRightTab" data-index='{{index}}' data-id="{{item.cate_id}}" data-name="{{item.cate_name}}">{{item.cate_name}}</view>
  </block>
</scroll-view>
 
  <scroll-view class="nav_right" scroll-y="true">
    <!--如果有数据，才遍历项-->
    <view wx:if="{{workdetails.length>0}}">
      <block wx:for="{{workdetails}}" wx:key="{{index}}" >
        <view class="nav_right_items" data-index='{{index}}' bindtap="iqoo">
            <image src="{{item.img}}"></image>
            <view class='name1'>公司：{{item.place}}</view>
            <view class="name3">薪资：{{item.salary}}</view>
            <view class="name2">联系电话：{{item.contact}}</view>  
        </view>
      </block>
    </view>
 
    <!--如果无数据，则显示数据-->
    <view class="nocate" wx:else>
      <text>该职位暂无公司招聘</text>
    </view>
  </scroll-view>

<!-- 顶上去 -->
<view class="sup-bar"></view>

