<!--miniprogram/page/disable/disableMyAdress/disableMyAdress.wxml-->
<!-- 标题 -->
<view class="title">
  <text class="title-content">我的收货地址</text>
</view>

<!-- 顶下去 -->
<view class="sup-view"></view>

<!-- 一堆单选框 -->
<radio-group class="radio-group" bindchange="radioChange">
    <view class="radio" wx:for="{{adresses}}" wx:key = "key" class="every-radio">
      <!-- 分割线 -->
      <view class="dividing-top"></view>
      <view class="adr-detail">
        <view class="adr-info">
          <view class="person-info">
            <text class="adr-name">{{item.name}}</text>
            <text class="adr-phone">{{item.phone}}</text>
          </view>
          <view class="adr-detailed"><text>{{item.adr_detail}}</text></view>
        </view>
        <view class="edit-func">编辑</view>
      </view>
      <!-- 分割线 -->
      <view class="dividing-bottom"></view>
      <view class="the-radio">
        <view>
          <radio value="{{item.id}}" checked="{{item.checked}}"/>默认地址
        </view>
        <view class="delete-func">删除</view>
      </view>
    </view>
</radio-group>

<!-- 底部功能 -->
<view class="add-new">添加收货地址</view>

<!-- 顶上去 -->
<view class="sup-bottom"></view>