/* miniprogram/page/disable/disableMyAdress/disableMyAdress.wxss */
.title {
  position: fixed;
  background-color: #3a78e7;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  width: 750rpx;
  top: 0;
  z-index: 9999;
  color: #fff;
}

.title-content {
  margin: auto;
  font-size: 35rpx;
  letter-spacing: 3rpx;
}

.sup-view {
  width: 100%;
  height: 90rpx;
}

.dividing-top {
  width: 100%;
  height: 30rpx;
  background-color: rgb(240, 240, 240);
}

.adr-detail {
  display: flex;
  justify-content: space-between;
  padding: 25rpx;
}

.adr-phone {
  font-size: 25rpx;
  margin-left: 25rpx;
}

.adr-detailed {
  margin-top: 20rpx;
  letter-spacing: 3rpx;
  font-size: 30rpx;
}

.edit-func {
  background-color: #3a78e7;
  color: #fff;
  text-align: center;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  border-radius: 50rpx;
  margin-top: 50rpx;
}

.dividing-bottom {
  width: 100%;
  height: 5rpx;
  background-color: rgb(240, 240, 240);
}

.the-radio {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 60rpx 20rpx 60rpx;
  font-size: 25rpx;
  color: #a9a9a9;
}

radio .wx-radio-input {
  height: 25rpx;
  width: 25rpx;
  background-color: #bfbfbf;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  color: #00a0e9;
  background-color: #bfbfbf;
  border-radius: 100%;
}

.add-new {
  height: 80rpx;
  width: 100%;
  background-color: #3a78e7;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  bottom: 0;
  font-size: 35rpx;
}

.sup-bottom {
  height: 100rpx;
}